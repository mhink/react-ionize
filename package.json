  "repository": {
    "type": "git",
    "url": "https://github.com/mhink/ionize"
  },
  "bugs": {
    "url": "https://github.com/mhink/ionize/issues"
  },
  "homepage": "https://github.com/mhink/ionize",
  "files": [
    "lib",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "react",
    "reactjs",
    "electron",
    "desktop",
    "app",
    "atom",
    "osx",
    "windows"
  ],
  "devDependencies": {
